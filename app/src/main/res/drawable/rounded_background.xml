<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Background color -->
        <solid android:color="#FF5722" /> <!-- Replace with any color you like -->

        <!-- Corner radius for rounded edges -->
        <corners android:radius="16dp" /> <!-- Adjust the radius to change the roundness -->

        <!-- Optional: Add padding inside the shape -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>

